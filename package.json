{
  "name": "prisma-read-after-write-analyzer",
  "version": "0.1.0",
  "description": "Static code analyzer to detect read-after-write issues in Prisma projects using read replicas",
  "main": "dist/index.js",
  "bin": {
    "prisma-raw-analyzer": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "prisma",
    "read-replicas",
    "static-analysis",
    "linter",
    "database",
    "analyzer"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "ts-morph": "^24.0.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.4.0"
  }
}
